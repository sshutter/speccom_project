<h1>Add new intem in inventory</h1>

<%= form_with url: add_invent2_path, data: {turbo: false} do |f| %>
    <div><%= f.hidden_field :lockversion %></div>
    <div>
        <%= f.label :name, style: "display: block", class: "form-label" %>
        <%= f.text_field :new_item_name, class: "form-control" %>
    </div><br>

    <div>
        <%= f.label :category, style: "display: block", class: "form-label" %>
        <%= f.text_field :new_item_category, class: "form-control" %>
    </div><br>

    <div>
        <%= f.label :new_mar_price, "Price", class: "form-label" %>
        <%= f.text_field :new_mar_price, class: "form-control" %>
    </div><br>

    <div>
        <%= f.label :new_mar_stock, "Stock", class: "form-label" %>
        <%= f.text_field :new_mar_stock, class: "form-control" %>
    </div><br>

    <div>
        <%= f.label :enable, "Enable item" %>
        <%= f.select :new_item_enable, options_for_select([["True", true], ["False", false]]), class: "dropdown-item" %>
    </div><br>

    <div>
        <%= f.label :user_id,"Owner" , class: "form-label" %>
        <%= f.select :new_owner_user_id, User.where(user_type: 1).all.collect { |u| [u.id.to_i, u.id.to_i] }, class: "form-control" %>
    </div><br>

    <div>
        <%= f.submit :Create, class: "btn btn-dark" %>
    </div>

<% end %>

<br>
<%= link_to "Back", my_inventory_path, class: "btn btn-dark" %>